
@model List<VillaNumber>

<div class="row">
	<div class="w-100 card">
		<div class="card-header bg-success bg-gradient text-center m-3">
			<h2>Villa Number</h2>
		</div>

		<div class="card-body">
			<div class="text-end m-2">
				<a asp-action="create" asp-controller="villanumber" class="btn btn-danger">
					<i class="bi bi-plus-circle-fill"></i>Add Villa Number
				</a>
			</div>

			<table class="table table-hover table-striped table-bordered">

				<thead>
					<tr>

						<th>Villa Number</th>
						<th>Special Details</th>
						<th>Villa Name</th>
						<th>Action</th>

					</tr>

				</thead>
				<tbody>
					@foreach (var villaNumber in Model)
					{
						<tr>
							<td>@villaNumber.Vill_Number</td>
							<td>@villaNumber.SpecialDetails</td>
							<td>@villaNumber.Villas.Name</td>
							<td>
								<a class="btn btn-primary" asp-action="Edit" asp-controller="VillaNumber" asp-route-id="@villaNumber.Vill_Number">Edit</a>
								<a class="btn btn-danger" asp-action="Delete" asp-controller="VillaNumber" asp-route-id="@villaNumber.Vill_Number">Delete</a>
							</td>



						</tr>
					}
				</tbody>

			</table>






       </div>

	</div>
</div>