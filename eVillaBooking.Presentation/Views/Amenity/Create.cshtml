@model Amenity


<div class="row">
	<div class="w-100 card">

		<div class="card-header bg-success bg-gradient text-center m-3">
			<h2> Add Villa Amenity</h2>
		</div>


		<div class="card-body">
			<form asp-action="Create" asp-controller="Amenity" method="post">
				<div class="form-floating m-2">
					<select class="form-select" asp-items="@ViewData["SelectListItems"] as IEnumerable<SelectListItem>" asp-for="VillaId">
						<option selected disabled>Select Villa Name</option>
					</select>
					<label asp-for="VillaId"></label>
					<span class="text-danger" asp-validation-for="VillaId"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Name" class="form-control" placeholder="" />
					<label asp-for="Name"></label>
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Description" class="form-control" placeholder="" />
					<label asp-for="Description"></label>
					<span class="text-danger" asp-validation-for="Description"></span>
				</div>


				<div class="text-center">

					<input type="submit" value="save" class="btn btn-success" />
					<a asp-action="index" asp-controller="Amenity" class="btn btn-danger">Cancel</a>
				</div>

			</form>

		</div>

	</div>

</div>

