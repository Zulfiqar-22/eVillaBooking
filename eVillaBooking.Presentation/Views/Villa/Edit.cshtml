@using eVillaBooking.Domain.Entity;
@model Villas


<div class="row">
	<div class="w-100 card">

		<div class="card-header bg-success bg-gradient text-center m-3">
			<h2>Edit Record List</h2>
		</div>


		<div class="card-body">
			<form asp-action="Edit" asp-controller="villa" method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="Id"/>

				<div class="row">
					<div class="col-md-9">
						<div class="form-floating m-2">
					<input type="text" asp-for="Name" class="form-control" placeholder="" />
					<label asp-for="Name"></label>
					<span class="text-danger" asp-validation-for="Name"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Description" class="form-control" placeholder="" />
					<label asp-for="Description"></label>
					<span class="text-danger" asp-validation-for="Description"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Price" class="form-control" placeholder="" />
					<label asp-for="Price"></label>
					<span class="text-danger" asp-validation-for="Price"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Sqft" class="form-control" placeholder="" />
					<label asp-for="Sqft"></label>
					<span class="text-danger" asp-validation-for="Sqft"></span>
				</div>

				<div class="form-floating m-2">
					<input type="text" asp-for="Occupancy" class="form-control" placeholder="" />
					<label asp-for="Occupancy"></label>
					<span class="text-danger" asp-validation-for="Occupancy"></span>
				</div>

				<div class="form-floating m-2">
					<input type="hidden" asp-for="ImageUrl" />
					<input type="file" asp-for="Image" class="form-control" placeholder="" />
					<label asp-for="ImageUrl"></label>
					<span class="text-danger" asp-validation-for="ImageUrl"></span>
				</div>


				<div class="text-center">

					<input type="submit" value="save" class="btn btn-success" />
					<a asp-action="index" asp-controller="villa" class="btn btn-danger">Cancel</a>
				</div>

					</div>
					<div class="col-md-3">
						<img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid grey"/>

					</div>

				</div>
			</form>

		</div>

	</div>

</div>

